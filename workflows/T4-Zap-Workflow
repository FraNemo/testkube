apiVersion: testworkflows.testkube.io/v1
kind: TestWorkflow
metadata:
  name: zaptest # name of the Test Workflow
  namespace: testkube
  labels: 
    tool: zap
    type: full-scan
spec: 
  container: 
    workingDir: /zap/wrk/
    image: zaproxy/zap-stable:latest
    volumeMounts:
    - name: zap-wrk
      mountPath: /zap/wrk/
  pod:
   volumes:
   - name: zap-wrk
  steps: # steps that will be executed by this Test Workflow
  - name: Run Zap Scan
    shell: zap-full-scan.py -t http://frontend-external.default.svc.cluster.local:80 -m 5 -d -D 5 -I -l PASS -T 60 -r zap-report.html
  - name: Saving artifacts
    condition: always
    artifacts:
      paths:
      - zap-report.html